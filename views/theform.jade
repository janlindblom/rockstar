form(method="post", action="/submit", id="rockstarForm")
  .row
    .six.columns
      .row
        .twelve.columns.vcard
          p Tack 
            span.fn.n #{fullName}!
          p Vi kommer höra av oss till dig på #{emailAddress}, tills dess har vi registrerat att du bor på 
            span.adr #{streetAddress}
            , 
            span.postal-code #{zipCode} 
            span.city #{city}.
          label(for="fullName") Fullständigt namn:
          input(type="text", name="fullName", id="fullName", class="required", value=fullName)
          small#fullNameError
      .row
        .twelve.columns
          p Vi kommer höra av oss till dig på #{emailAddress}, tills dess har vi registrerat att du bor på
          label(for="emailAddress") E-mail:
          input(type="text", id="emailAddress", name="emailAddress", class="required", value=emailAddress)
          small#emailError
      .row
        .twelve.columns
          
          label(for="streetAddress") Postadress:
          input(type="text", id="streetAddress", name="streetAddress", class="required", value=streetAddress)
          small#streetAddressError
      .row
        .four.columns
          label(for="zipCode") Postnummer:
          input(type="text", id="zipCode", name="zipCode", class="required", value=zipCode)
          small#zipCodeError
        .eight.columns
          label(for="city") Ort:
          input(type="text", id="city", name="city", class="required", value=city)
          small#cityError
      .row
        .twelve.columns
          label(for="band") Vad heter ditt favoritband?
          input(type="text", id="band", name="band", class="required", value=band)
          small#bandError
    .six.columns
      h4 Tack!
      p.lead Medan du väntar på svar kan du passa på att njuta av några låtar från #{band}!
      block tophits
  .row
    .row
      .twelve.columns
        input(type="submit", value="Skicka!", class="radius button", name="submitButton", id="submitButton")
