extends layout

block content
  h1= title
  #rockstarFormContainer
    form(method="post", action="/submit", id="rockstarForm")
      .row
          .six.columns.end
              label(for="fullName") Fullst√§ndigt namn:
              input(type="text", name="fullName", id="fullName", class="required")
              small#fullNameError
      .row
          .six.columns.end
              label(for="emailAddress") E-mail:
              input(type="text", id="emailAddress", name="emailAddress", class="required")
              small#emailError
      .row
          .six.columns.end
              label(for="streetAddress") Postadress:
              input(type="text", id="streetAddress", name="streetAddress", class="required")
